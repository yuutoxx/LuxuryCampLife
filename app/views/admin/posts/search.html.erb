<div class="main">
  <div class="container">
    <div class="post-contents">
      <div class="d-flex">
        <h2 class="post-contents-title m-2">検索結果</h2>
        <div class="col-md-6 offset-md-1">
          <%= render 'seach', q: @q %>
        </div>
      </div>
      <div class="col-md-7 offset-md-2">
        <% if @posts.present? %>
          <div class="ml-2 mb-2">
            <%= sort_link(@q, :'created_at desc', '新しい順', hide_indicator: true, class:'custom-link text-secondary') %> |
            <%= sort_link(@q, :'created_at ASC', '古い順', hide_indicator: true, class:'custom-link text-secondary') %> |
            <%= sort_link(@q, :'star DESC', '評価の高い順', hide_indicator: true, class:'custom-link text-secondary') %> |
            <%= sort_link(@q, :'star ASC', '評価の低い順', hide_indicator: true, class:'custom-link text-secondary') %>
          </div>
          <%= render 'index', posts: @posts %>
        <% else %>
          <p class='text-center'>投稿が見つかりませんでした</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
