<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-md-8 p-0">
      <div>
        <%= link_to admin_customers_path do %>
          <i class="fa-solid fa-arrow-left mb-4 text-dark"><span class='ml-4'>会員一覧</span></i>
        <% end %>
      </div>
      <div class="card">
        <div class="card-header text-center">
          <h3><%= "#{@customer.name}さんの会員情報" %></h3>
        </div>
        <div class="card-body">
          <table class="table">
            <tbody>
              <tr>
                <th>会員ID</th>
                <td><%= @customer.id %></td>
              </tr>
              <tr>
                <th>プロフィール画像</th>
                <td><%= image_tag @customer.get_image(1000,1000), class: 'image-container rounded-circle' %></td>
              </tr>
              <tr>
                <th>名前</th>
                <td><%= @customer.name %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @customer.email %></td>
              </tr>
              <tr>
                <th>ステータス</th>
                <td>
                  <% if @customer.is_active %>
                    <span class="badge badge-success">有効</span>
                  <% else %>
                    <span class="badge badge-secondary">退会</span>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="mt-4 text-center">
            <%= link_to "会員情報編集", edit_admin_customer_path, class: "btn btn-success btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>