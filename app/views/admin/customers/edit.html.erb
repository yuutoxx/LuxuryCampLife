<%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
  <div class="container mt-4">
    <%= render 'layouts/errors', obj: @customer %>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header text-center">
            <h3><%= "#{@customer.last_name} #{@customer.first_name} さんの会員情報編集" %></h3>
          </div>
          <div class="card-body">
            <table class="table">
              <tbody>
                <tr>
                  <th>会員ID</th>
                  <td><%= @customer.id %></td>
                </tr>
                <tr>
                  <th>名前</th>
                  <td>
                    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control mb-2" %>
                    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control mb-2" %>
                  </td>
                </tr>
                <tr>
                  <th>フリガナ</th>
                  <td>
                    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control mb-2" %>
                    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control mb-2" %>
                  </td>
                </tr>
                <tr>
                  <th>郵便番号</th>
                  <td>
                    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
                  </td>
                </tr>
                <tr>
                  <th>住所</th>
                  <td>
                    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
                  </td>
                </tr>
                <tr>
                  <th>電話番号</th>
                  <td>
                    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control" %>
                  </td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  </td>
                </tr>
                <tr>
                  <th>ステータス</th>
                  <td>
                    <div class="form-check form-check-inline">
                      <%= f.radio_button :is_active, false, class: "form-check-input" %>
                      <%= f.label :is_active_false, '退会', class: "form-check-label" %>
                    </div>
                    <div class="form-check form-check-inline">
                      <%= f.radio_button :is_active, true, class: "form-check-input" %>
                      <%= f.label :is_active_true, '有効', class: "form-check-label" %>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>

            <div class="text-center">
              <%= f.submit "変更保存", class: "btn btn-success" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>