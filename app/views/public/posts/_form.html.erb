<%= form_with model:post,local:true do |f| %>
  <div class='form-group'>
    <%= f.label :商品画像 %>
    <%= f.file_field :image, class: 'form-control-file image', accept: 'image/*' %>
  </div>
  <div class='form-group'>
    <%= f.label :商品名 %>
    <%= f.text_field :title, class: 'form-control post_title' %>
  </div>
  <div class='form-group'>
    <%= f.label :使用感など %>
    <%= f.text_area :body, class: 'form-control post_body' %>
  </div>
  <% if post.id.nil? %>
    <div class='form-group' id='star'>
      <%= f.label :評価 %>
      <%= f.hidden_field :star, id: :review_star, class: 'form-control' %>
      <div id='post_raty'></div>
    </div>
    <script>
      $(document).on('turbolinks:load', function(){
        let elem = document.querySelector('#post_raty');
        if (elem == null) return;

        elem.innerHTML = ""
        let opt = {
          starOn: "<%= asset_path('star-on.png') %>",
          starOff: "<%= asset_path('star-off.png') %>",
          starHalf: "<%= asset_path('star-half.png') %>",
          scoreName: 'post[star]',
        };
        raty(elem, opt);
      });
    </script>
  <% else %>
    <div class='form-group'>
      <%= render "static_rate", post: post %>
    </div>
  <% end %>
  <div class='form-group'>
    <%=f.label:税抜価格 %>
    <div class='d-flex'>
    <%=f.text_field :price, class: 'form-control post_price', placeholder:'1000' %><h6 class='p-2'>円</h6>
    </div>
  </div>
  <div class='form-group'>
    <label>タグ（、で区切ると複数登録可能）</label>
    <%= f.text_field :name, class: 'form-control', placeholder:'テント、寝袋' %>
  </div>
  <div class='form-group'>
    <% if post.new_record? %>
      <%= f.submit '投稿', class: 'btn btn-outline-success col-sm-8 offset-md-2' %>
    <% else %>
      <%= f.submit '更新', class: 'btn btn-outline-success col-sm-6 offset-md-3' %>
    <% end %>
  </div>
<% end %>
