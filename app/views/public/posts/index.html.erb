<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 mt-4'>
      <%= render 'form', post: @post %>
    </div>
    <div class='col-md-6 p-0'>
      <%= render 'seach', q: @q %>
      <div class='ml-2 mb-2'>
        <%= link_to '新しい順', posts_path(sort: 'created_at DESC'), class:'custom-link text-secondary' %> |
        <%= link_to '評価の高い順', posts_path(sort: 'star DESC'), class:'custom-link text-secondary' %>
      </div>
      <%= render 'index', posts: @posts %>
    </div>
    <div class='col-md-3'>
      <div class="row justify-content-center">
        <%= render 'choice', q: @q %>
        <%= render 'tag', tag_list: @tag_list %>
      </div>
    </div>
  </div>
</div>
