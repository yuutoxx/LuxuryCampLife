<div class="container mt-4">
    <h3>マイページ</h3>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h5>登録情報　<%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-secondary btn-sm ml-2" %></h5>
          <table class="table">
            <tbody>
              <tr>
                <th>プロフィール画像</th>
                <td><%= image_tag @customer.get_profile_image(100,100) %></td>
              </tr>
              <tr>
                <th>氏名</th>
                <td><%= @customer.name %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @customer.email %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <% if @post %>
    <h2>ポスト</h2>
  <div class='row'>
    <div class='col-md-8 offset-md-2'>
    <% @posts.each do |post| %>
      <div class='card'>
        <div class='card-body'>
          <div class='d-flex flex-row'>
            <%= link_to customer_path(post) do %>
              <%= image_tag post.customer.get_profile_image(50,50), class: 'rounded-circle' %>
            <% end %>
            <h5 class='pl-3'><%= post.customer.name %></h5>
          </div>
          <div class='d-flex flex-row offset-md-1 pl-2'>
            <div class='img-container pr-3'><%= image_tag post.get_post_image(800,800) %></div>
            <div>
              <p><%= link_to post.title,post %></p>
              <p><%= post.body %></p>
              <p><i class="fa-regular fa-comment-dots"></i><i class="fa-solid fa-gear" style="color: #008f64;"></i><i class="fa-regular fa-trash-can" style="color: #ff0000;"></i></p>
              <p>¥<%= post.add_tax_price.to_s(:delimited) %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <% end %>
</div>