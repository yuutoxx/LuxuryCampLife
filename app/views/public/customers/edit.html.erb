<%= form_with model: @customer, id: 'post_img', url: customer_path(@customer), local: true do |f| %>
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card">
          <%#= render 'layouts/errors', obj: @customer %>
          <div class="card-header text-center">
            <h3>会員情報編集</h3>
          </div>
          <div class="card-body">
            <table class="table">
              <tbody>
                <tr>
                  <th>プロフィール画像</th>
                  <td>
                    <div class='form-group'>
                      <div class="image-field">
                        <label class='form-image'>
                          <span class='image-file'><i class="fa-regular fa-image mr-2"></i>画像選択</span>
                          <%= f.file_field :image, class: "hidden", style: "display: none;" %>
                        </label>
                        <div class="rounded-circle" id="previews"></div>
                      </div>
                    </div>
                  </td>
                </tr>
                <tr>
                  <th>名前</th>
                  <td>
                    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb-2" %>
                  </td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  </td>
                </tr>
              </tbody>
            </table>
            <div class="text-center">
              <%= f.submit "編集内容を保存", class:" mr-5 btn btn-success" %>
              <%= link_to "退会する", unsubscribe_customers_path, class:"ml-5 btn btn-sm btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>