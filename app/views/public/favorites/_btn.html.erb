<% if post.favorited_by?(current_customer) %>
  <%= link_to post_favorites_path(post), class: 'custom-link', method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), class: 'custom-link text-dark', method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.favorites.count %>
  <% end %>
<% end %>