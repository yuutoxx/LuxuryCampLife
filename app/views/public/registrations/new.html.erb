<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
          <h4>新規会員登録</h4>
        </div>
        <div class="card-body text-center">
          <%= form_with model: @customer, url: customer_registration_path do |f| %>
            <%= render 'layouts/errors', obj: @customer %>
            <div class="field mb-3">
              <label class="w-25" for="name">名前</label>
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>
            <div class="field mb-3">
              <label class="w-25" for="email">メールアドレス</label>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="field mb-3">
              <label class="w-25" for="password">パスワード</label>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
            <div class="field mb-3">
              <label class="w-25" for="password">パスワード(確認用)</label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
            <div class="form-group text-center">
              <%= f.submit "新規登録", class: "btn btn-outline-success col-sm-3" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header text-center">
          <h4>既に登録済みの方</h4>
        </div>
        <div class="card-body text-center">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>