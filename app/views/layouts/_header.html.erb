<header class="sticky-top shadow-sm bg-light">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <%= link_to "LuxuryCampLife", root_path, class: 'navbar-brand kings-regular' %>
      <div>
        <% if customer_signed_in? %>
          <p class="text-dark volkhov-regular m-2 ml-4">ようこそ<%= current_customer.name %>さん！</p>
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <li class="nav-item">
            <%=  link_to admin_customers_path,class: 'nav-link text-dark volkhov-regular' do %>
              <i class="fa-solid fa-users"></i>会員一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to admin_posts_path, data: {"turbolinks" => false}, class: 'nav-link text-dark volkhov-regular' do %>
              <i class="fa-solid fa-cake-candles"></i>投稿一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_admin_session_path,method: :delete, class: 'nav-link text-dark volkhov-regular' do %>
              <i class="fa-solid fa-arrow-right-from-bracket"></i>ログアウト
            <% end %>
          </li>
        <% elsif customer_signed_in? %>
          <li class="nav-item">
            <%= link_to customer_path(current_customer),class: 'nav-link text-dark volkhov-regular' do %>
              <i class="fa-solid fa-user"></i>マイページ
            <% end %>
          </li>
          <li class="nav-item">
            <%=  link_to posts_path, data: {"turbolinks" => false}, class: 'nav-link text-dark volkhov-regular' do %>
              <i class="fa-solid fa-cake-candles"></i>投稿
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-dark volkhov-regular' do %>
              <i class="fa-solid fa-arrow-right-from-bracket"></i>ログアウト
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to about_path,class: 'nav-link text-dark volkhov-regular' do %>
              <i class="fa-solid fa-truck-fast"></i>LCLについて
            <% end %>
          </li>
          <li class="nav-item">
            <%=  link_to new_customer_registration_path,class: 'nav-link text-dark volkhov-regular' do %>
              <i class="fa-solid fa-user-plus"></i>会員登録
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_customer_session_path,class: 'nav-link text-dark volkhov-regular' do %>
              <i class="fa-solid fa-arrow-right-to-bracket"></i>会員ログイン
            <% end %>
          </li>
          <li>
            <%= link_to customers_guest_sign_in_path,class: 'nav-link text-dark volkhov-regular', method: :post do %>
              <i class="fa-solid fa-arrow-right-to-bracket"></i>ゲストログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
